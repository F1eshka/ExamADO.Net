<Window x:Class="EkzamenADO.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вхід / Реєстрація" Height="350" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Email:" Grid.Row="0"/>
        <TextBox x:Name="EmailBox" Margin="0,5" Grid.Row="1"/>

        <TextBlock Text="Пароль:" Grid.Row="2"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,5" Grid.Row="3"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="Увійти" Click="Login_Click" Width="80" Margin="5"/>
            <Button Content="Зареєструватися" Click="Register_Click" Width="150" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
